            <li><a href="/Certificate/index/@ViewBag.SiteId">Message</a></li>
            <li ><a href="/Company/Contact/@ViewBag.SiteId">Contact Us</a></li>
        </ul>
    </div>
</div>
@RenderBody()
<div class="bottom">
