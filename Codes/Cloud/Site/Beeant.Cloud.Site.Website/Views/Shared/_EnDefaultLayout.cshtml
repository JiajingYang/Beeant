@{
    Layout = "_Layout.cshtml";
}
@section head
{

    <link href="/Content/site.css" rel="stylesheet"/>
<script type="text/javascript">
    window.IsOpenImages=@ViewBag.Site.IsOpenImages.ToString().ToLower();
    window.Language = {
        PasswordErrorMessage: "Password Error",
        LoadErrorMessage: "The system is busy, please try again later",
        DetailTip: "more images"
    };
</script>
@RenderSection("head", required: false)
}
 
<div class="top">
    <div class="con center">
        <div class="lk">
            <a href="/home/index/@ViewBag.SiteId">home</a>|<a href="/Company/Contact/@ViewBag.SiteId">contact us</a>
        </div>
    </div>
</div>
<div class="header center">
    <div class="headertop">
        <div class="logo">
            <img src="@ViewBag.Site.LogoFullFileName" alt="@ViewBag.Site.Name" />
        </div>
        <div class="search">
            <form action="/Commodity/Index/@ViewBag.SiteId">
                <input class="sinput" type="text" name="key" placeholder="search key" value="@ViewBag.SearchKey"/>
