@using Beeant.Basic.Services.Mvc.Extension.Mobile
<!DOCTYPE html>
<html>
<head>
    @Html.GetTop()
    <title>@string.Format("蜂蚁窝-{0}", ViewBag.Title ?? "")</title>
    <meta content="@(string.Format("{0}", ViewBag.Keywords ?? "蜂蚁窝,提供技术服务"))" name="Keywords">
    <meta content="@(string.Format("{0}", ViewBag.Description ?? "蜂蚁窝，一家专门做技术服务、商品交易等平台"))" name="description">
    @Styles.Render("~/Content/site.css")
    @RenderSection("head", required: false)
   
</head>
<body>
    @Html.GetHeader()
    <div class="mainer">
        @RenderBody()
    </div>

    @Html.GetBottom()
</body>
</html>
