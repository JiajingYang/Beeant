@using Beeant.Basic.Services.Mvc.Extension
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@string.Format("蜂蚁窝-{0}", ViewBag.Title ?? "")</title>
     <meta content="@(string.Format("{0}", ViewBag.Keywords ?? "蜂蚁窝"))" name="Keywords">
    <meta content="@(string.Format("{0}", ViewBag.Description ?? "蜂蚁窝"))" name="description">
    <link rel="shortcut icon" href="@Html.GetUrl("PresentationWebsiteSharedUrl")/images/favicon.ico" type="image/x-icon"/>
          @RenderSection("head", required: false)
          @Scripts.Render("~/bundles/modernizr")
          @Styles.Render("~/Content/css")
          @Scripts.Render("~/Scripts/jquery.min.js")
          @Scripts.Render("~/Scripts/Winner/Winner.ClassBase.js")
          @RenderSection("styles", required: false)
</head>
    <body>
        <div class="toper">
            <div class="inner center">
                <ul>
                    <li> <a href="@Html.GetUrl("PresentationWebsiteHomeUrl")">蜂蚁窝</a></li>
                </ul>
                   @{
                       if (ViewBag.Identity != null)
                       {
                           <ul class="login">
                               <li> <span><a href="/Desktop/index">@ViewBag.Identity.AccountName</a> ！欢迎来到lai128 </span> </li>
                               <li> <a href="/home/Quit">[退出]</a> </li>
                           </ul>
                       }
                   }
            </div>
        </div>
        <div class="header">
            <div class="center">
                <div class="logo"><img src="@Html.GetUrl("PresentationWebsiteSharedUrl")/Images/logo.png" alt="" /></div>
            </div>
            @RenderSection("hearder", required: false)
        </div>
        <div class="mainer">
            @RenderBody()
        </div>
        <div class="footer">
            @RenderSection("footer", required: false)
            @{Html.RenderAction("Footer", "Guide");} 
        </div>
         <div class="bottomer">
            备案号:浙ICP备15002961号
        </div>
        @RenderSection("scripts", required: false)
      

    </body>
</html>
