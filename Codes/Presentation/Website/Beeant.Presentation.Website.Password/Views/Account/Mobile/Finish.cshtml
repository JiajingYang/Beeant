@{
    ViewBag.Title = "绑定手机";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Beeant.Basic.Services.Mvc.Extension
@model Beeant.Presentation.Website.Password.Models.Account.MobileModel
@section head
{

    @Styles.Render("~/Content/Site.css")
}


<div class="pass">
    @Html.Partial("~/Views/Account/Mobile/_Top.cshtml", Model)

    <br /><br /><br /><br /><br />
    <br /><br />
    <div class="ful">
        <h1 style="color: #f36b18;">恭喜你手机号码已经成功绑定</h1>
        <br /><br /><br /><br />
        <h3>
            您接下来的操作<span id="sptimes"></span>
            <a href="@Html.GetUrl("PresentationWebsiteHomeUrl")">首页</a>

            <br /><br /><br />
            <script type="text/javascript">
                var times = 4;
                var func = function () {
                    $("#sptimes").html(times);
                    times = times - 1;
                    if (times == 0)
                        window.location.href = '@Html.GetUrl("PresentationWebsiteHomeUrl")';
                    setTimeout(func, 1000);
                }
                func();
            </script>
        </h3>
    </div>

</div>

